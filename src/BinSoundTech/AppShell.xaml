<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="BinSoundTech.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:BinSoundTech"
       xmlns:pages="clr-namespace:BinSoundTech.Pages"
       Title="BinSoundTech">

    <TabBar>
        <ShellContent Title="Home" 
                      Icon="{OnPlatform Default='', iOS='house.fill'}"
                      Route="MainPage" 
                      ContentTemplate="{DataTemplate local:MainPage}" />
        
        <ShellContent Title="Audio Inputs" 
                      Icon="{OnPlatform Default='', iOS='slider.horizontal.3'}"
                      Route="AudioInputs" 
                      ContentTemplate="{DataTemplate pages:AudioInputsPage}" />
    </TabBar>
    
</Shell>
