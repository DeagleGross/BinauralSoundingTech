<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BinSoundTech.ViewModels"
             x:Class="BinSoundTech.MainPage"
             x:DataType="vm:MainPageViewModel"
             Title="Binaural Sound Tech">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25">
            
            <!-- App Title -->
            <VerticalStackLayout Spacing="10" Margin="0,20,0,10">
                <Label Text="Binaural Sound Tech"
                       FontSize="32"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       SemanticProperties.HeadingLevel="Level1" />
                <Label Text="3D Audio Positioning with HRTF"
                       FontSize="16"
                       TextColor="Gray"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>

            <!-- Loading Status -->
            <Label Text="{Binding LoadingStatus}"
                   FontSize="12"
                   TextColor="Gray"
                   HorizontalOptions="Center" />

            <!-- App Description -->
            <Border BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}"
                   Padding="20"
                   StrokeShape="RoundRectangle 12">
                <VerticalStackLayout Spacing="15">
                    <Label Text="What is Binaural Audio?"
                           FontSize="18"
                           FontAttributes="Bold" />

                    <Label Text="Binaural audio creates a 3D sound experience using Head-Related Transfer Functions (HRTF). By processing audio through HRTF filters, sounds can be positioned anywhere in 3D space around the listener - left, right, above, below, in front, or behind."
                           FontSize="14"
                           LineHeight="1.4" />

                    <Label Text="This app uses the CIPIC HRTF database to apply realistic spatial audio positioning to your audio files and microphone input in real-time."
                           FontSize="14"
                           TextColor="Gray"
                           LineHeight="1.4" />
                </VerticalStackLayout>
            </Border>

            <!-- Navigation to Audio Inputs -->
            <Border BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#1A237E}"
                   Padding="25"
                   StrokeShape="RoundRectangle 12">
                <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                    <Label Text="Audio Input Mixer"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                    <Label Text="Configure multiple audio sources (files and microphones) with individual binaural positioning, volume control, and real-time 3D audio processing."
                           FontSize="14"
                           TextColor="{AppThemeBinding Light=#424242, Dark=#B0BEC5}"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           LineHeight="1.3" />
                    <Button Text="Open Audio Mixer"
                            Clicked="OnOpenAudioInputsClicked"
                            HorizontalOptions="Center"
                            Padding="30,12"
                            FontSize="16" />
                </VerticalStackLayout>
            </Border>

            <!-- Footer -->
            <Label Text="Use headphones for the best 3D audio experience"
                   FontSize="12"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   FontAttributes="Italic"
                   Margin="0,10,0,20" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
